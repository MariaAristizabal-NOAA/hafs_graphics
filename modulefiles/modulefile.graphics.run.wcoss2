#converting grib2 to netcdf
#setenv WGRIB2 /apps/wgrib-2.0.8/wgrib2/wgrib2

module load gsl/2.6
module load udunits/2.2.28
module load nco/4.9.7

module use /apps/ops/test/nco/modulefiles
