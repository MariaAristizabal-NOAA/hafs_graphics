proc ModulesHelp { } {
    puts stderr "Set environment veriables for hafs_graphics"
}
module-whatis "hafs_graphics prerequisites"

set ver 1.0.0

# System and compiler prereqs:
module purge
module load envvar/1.0
module load PrgEnv-intel/8.1.0
